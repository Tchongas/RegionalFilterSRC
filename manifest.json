{
  "manifest_version": 3,
  "name": "PaceMan extension",
  "description": "extension to see paceman in every tab",
  "version": "1.3",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://www.speedrun.com/*"],
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "backgrond.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.speedrun.com/*"],
      "js": ["scripts/content.js"]
    }
  ]
}